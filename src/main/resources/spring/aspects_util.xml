<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                ">

    <aop:aspectj-autoproxy />

    <bean class="ru.dmkuranov.aspects_util.utils.SpringAopTester"/>

    <bean class="ru.dmkuranov.aspects_util.spring.disableexecutioninsessiononexception.DisableExecutionInSessionOnExceptionAspect"/>

    <bean class="ru.dmkuranov.aspects_util.spring.emailcomplaintonexception.EmailComplaintOnExceptionAspect">
        <constructor-arg name="javaMailSender" ref="mailSenderForUtilAspects"/>
        <constructor-arg name="mailFrom" value="${aspects_util.mailFrom}"/>
    </bean>
    <bean id="mailSenderForUtilAspects" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${aspects_util.smtpHost}"/>
    </bean>

</beans>